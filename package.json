{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "db:gen": "drizzle-kit generate",
    "db:regen": "rm -rf ./database/migrations && drizzle-kit generate",
    "db:migrate": "npx tsx ./database/migrate.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^11.0.0",
    "drizzle-orm": "^0.31.2",
    "ulidx": "^2.3.0",
    "valibot": "^0.31.1",
    "vue": "^3.4.19",
    "vue-router": "^4.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.9",
    "drizzle-kit": "^0.22.7",
    "nuxt": "^3.11.1",
    "typescript": "^5.4.3",
    "vue-tsc": "^1.8.27"
  },
  "prettier": {
    "printWidth": 100
  }
}
